<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.AddApplyActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="match_parent"
            android:layout_height="66dp"
            android:textSize="30dp"
            android:gravity="center"
            android:background="@color/colorPrimary"
            android:text="申请" />


        <Spinner
            android:id="@+id/ApplySpinner"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/Spinner01"
            android:layout_width="match_parent"
            android:layout_height="29dp" />
        <TextView
            android:id="@+id/applyUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/applyDepart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>



        <EditText
            android:id="@+id/startDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="开始时间"
            android:ems="10" />

        <EditText
            android:id="@+id/endDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="结束时间"
            android:ems="20"
            />

        <EditText
            android:id="@+id/leaveHours"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="请假时长"
            />

        <EditText
            android:id="@+id/leaveReason"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="20"
            android:hint="请假原因" />

        <Spinner
            android:id="@+id/ApplySpinner1"
            android:layout_width="match_parent"
            android:layout_height="35dp" />

        <TextView
            android:id="@+id/Spinner1Text"
            android:layout_width="match_parent"
            android:layout_height="29dp" />

        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提交" />


    </LinearLayout>
</android.support.constraint.ConstraintLayout>